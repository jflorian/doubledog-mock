[<%= @reponame %>]
name=<%= @reponame %>
<% if @baseurl -%>
baseurl=<%= [@baseurl].flatten.compact[0] %>
<% [@baseurl].flatten.compact[1..-1].each do |u| -%>
        <%= u %>
<% end -%>
<% end -%>
<% if @metalink -%>
metalink=<%= @metalink %>
<% end -%>
<% if @mirrorlist -%>
mirrorlist=<%= @mirrorlist %>
<% end -%>
<% if  @cost != 1000 -%>
cost=<%= @cost %>
<% end -%>
<% if ! @enabled -%>
enabled=0
<% end -%>
failovermethod=<%= @failovermethod %>
<% if @gpgkey -%>
gpgkey=<%= [@gpgkey].flatten.compact[0] %>
<% [@gpgkey].flatten.compact[1..-1].each do |k| -%>
       <%= k %>
<% end -%>
<% end -%>
<% if @gpgcheck -%>
gpgcheck=1
<% end -%>
